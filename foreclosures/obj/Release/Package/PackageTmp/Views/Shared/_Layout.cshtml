<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-JUB32PfdsTkiOqA248XQCSo-TBodu7U"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/spin.js"></script>
    <script src="~/Scripts/admin.js"></script>

    <script src="~/Scripts/googlemaps.js"></script>




    <script type="text/javascript" src="https://code.angularjs.org/1.3.4/angular.min.js"></script>
    <script type="text/javascript" src="https://code.angularjs.org/1.3.4/angular-route.min.js"></script>
            @Scripts.Render("~/Scripts/Angular/js")
</head>


<body style="height: 100%; margin: 0px; padding: 0px">
    <div ng-controller="Navigation">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">

                <div class="navbar-collapse collapse" style="color:#fff">
                    <ul class="nav navbar-nav pull-right">

                        <li ng-show="User.Role == 'Admin'"><a href="#/admin">Admin</a></li>
                        <li ng-show="User.LoggedIn"><a href="#" ng-click="LogOut()">Logout</a></li>
                        <li><a href="#/">Home</a></li>
                        <li><a href="#/login">Login</a></li>
                        <li><a href="#/register">Register</a></li>

                    </ul>

                    <span ng-if="PageScraper.PagesBeingScraped.length > 0"><a ng-click="ShowPageScrapingDiv()" href="javascript:void(0)">Scraping... <img src="~/Content/ajax-loader(2).gif" /></a></span>
                </div>


            </div>

        </div>

        <div id="meterHolder" ng-show="PageScraper.PagesBeingScraped.length > 0 && isShown" style="z-index:1000000; position:fixed; margin:60px 0px 0px 50px; background-color:#fff; border:1px #000 solid; padding:5px;">
        </div>

    </div>
   



    <div class="container" style="max-width:100%;height:800px;background:#fff">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - wihomeforeclosures.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
